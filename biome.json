{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"vcs": {
		"useIgnoreFile": true
	},
	"files": {
		"includes": [
			"packages/**/*",
			"!node_modules/**/*",
			"!**/dist/**/*",
			"!**/build/**/*",
			"!**/src/generated/**/*",
			"!**/.next/**/*"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space"
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"trailingCommas": "none",
			"semicolons": "asNeeded"
		}
	},
	"linter": {
		"includes": [
			"packages/**/*",
			"!**/*.test.ts",
			"!node_modules/**/*",
			"!**/dist/**/*",
			"!**/build/**/*",
			"!**/src/generated/**/*",
			"!**/.next/**/*"
		],
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "warn",
				"noConsole": "error"
			}
		}
	},
	"overrides": [
		{
			"includes": ["packages/bin/**"],
			"javascript": {
				"formatter": {
					"lineWidth": 120
				}
			}
		},
		{
			"includes": [
				"**/test/*.ts",
				"**/bin/**/*.ts"
			],
			"linter": {
				"rules": {
					"suspicious": {
						"noConsole": "off"
					}
				}
			}
		}
	]
}
{
  "private": true,
  "type": "module",
  "name": "api",
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "predev": "npm run build",
    "dev": "node --env-file=.env --watch dist/src/index.js",
    "format": "biome format --write src test",
    "lint": "biome check ./src",
    "lint:fix": "biome check --write ./src",
    "tsc": "tsc --build tsconfig.test.json",
    "vitest": "vitest run --config=./vitest.config.ts",
    "test": "concurrently \"npm run tsc\" \"npm run vitest\"",
    "test:ci": "vitest run --config=./vitest.config.ts --poolOptions.threads.maxThreads=1 --maxWorkers=1 --minWorkers=1"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.3",
    "hono": "^4.9.8"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}

{
  "private": true,
  "type": "module",
  "name": "api",
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "predev": "npm run build",
    "dev": "node --env-file=.env --watch dist/src/index.js",
    "format": "biome format --write",
    "lint": "biome check",
    "lint-fix": "biome check --write",
    "tsc": "tsc --build tsconfig.test.json",
    "vitest": "vitest run --config=./vitest.config.ts",
    "test": "concurrently \"npm run tsc\" \"npm run vitest\"",
    "test-ci": "vitest run --config=./vitest.config.ts --maxWorkers=1"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.8",
    "@prisma/adapter-pg": "^7.2.0",
    "hono": "^4.11.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/node": "^25.0.6",
    "concurrently": "^9.2.1",
    "typescript": "^5.9.2",
    "vitest": "^4.0.16"
  }
}
